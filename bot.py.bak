# Auth / CLI
# =======================

def auth_smoke():
    calibrate_timestamp_offset()
    try:
        lk = retry_call(client.futures_stream_get_listen_key, "listen_key")
        print("üîë listenKey OK:", bool(lk))
        bals = retry_call(client.futures_account_balance, "futures_balance")
        print("üîê Auth OK ‚Äì balans kayƒ±t sayƒ±sƒ±:", len(bals))
    except Exception as e:
        print("‚ùå Auth FAIL:", e)
        raise SystemExit(e)

def parse_args() -> argparse.Namespace:
    p = argparse.ArgumentParser(description="Kiripto Nova Bracket Bot")
    p.add_argument("--symbol", help="√ñrn: BTCUSDT")
    p.add_argument("--side", choices=["BUY", "SELL"])
    p.add_argument("--qty", type=float, help="Miktar")
    p.add_argument("--sl", type=float, default=SL_PCT_DEF)
    p.add_argument("--tp", type=float, default=TP_PCT_DEF)
    p.add_argument("--trail", type=float, default=TRAIL_PCT_DEF)
    p.add_argument("--shadow", action="store_true")
    p.add_argument("--auto-pro", action="store_true", help="Basit otomatik sinyal ve risk/√∂d√ºl")
    p.add_argument("--strict", action="store_true", help="STRICT mod (korumacƒ±)")
    return p.parse_args()

def main():
    args = parse_args()
    shadow = bool(args.shadow)
    strict = bool(args.strict or STRICT_MODE)

    auth_smoke()

    if not args.symbol and not args.auto_pro:
        raise SystemExit("L√ºtfen --symbol verin veya --auto-pro kullanƒ±n.")

    if args.auto_pro:
        # PRO mod ‚Äî sembol verilmediyse BTCUSDT varsay
        sym = (args.symbol or "BTCUSDT").upper()
        side, risk, rr = auto_pro_decide(sym)
        qty = round_qty(sym, float(args.qty or 0.001))
        sl_pct = risk
        tp_pct = risk * rr
        print(f"PRO se√ßimi: {side} {sym} qty={qty}  SL={sl_pct}  TP={tp_pct}")
    else:
        sym = args.symbol.upper()
        side = args.side.upper()
        qty  = float(args.qty)
        sl_pct = max(0.0, float(args.sl))
        tp_pct = max(0.0, float(args.tp))

    trail_pct = max(0.0, float(args.trail))

    print(f"üåç Ortam: {'TESTNET' if USE_TESTNET else 'MAINNET'} | STRICT_MODE={strict}")
    print(f"üß≠ Symbol:{sym} Side:{side} Qty:{qty}")

    apply_account_settings(sym)

    # STRICT kontrol (√∂rnek): √ßok dar SL/TP reddet
    if strict:
        if sl_pct < 0.002:
            raise SystemExit("STRICT: SL √ßok dar (<0.2%)")
        if tp_pct < sl_pct*1.5:
            raise SystemExit("STRICT: TP, SL'in en az 1.5x‚Äôi olmalƒ±")

    res = bracket_market(sym, side, qty, sl_pct, tp_pct, trail_pct, shadow)
    print(f"‚úÖ Sonu√ß: entry_price={res['entry_price']:.4f}, sl={res['sl']}, tp={res['tp']}, trail={res['trail']}")

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        print("üõë ƒ∞ptal edildi.")
